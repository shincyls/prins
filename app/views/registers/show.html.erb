<div id="preview-title" class="row justify-content-center">
    <h3 class="mt-4">Print Preview</h3>
</div>


<page class="print-container" size="A5" layout="portrait" id="print-section">
    <div id="row-1" class="row" style="width:100%;height:25%;">
        <div class="border text d-flex justify-content-center text-special" id="title-1"><%= @register.company %></div>
    </div>

    <div id="row-2" class="row" style="width:100%;height:40%;">
        <div class="border text d-flex justify-content-center text-special" id="title-2"><%= @register.full_name %></div>
        <div class="border text d-flex justify-content-center text-special" id="title-3"><%= @register.employee_id %></div>
        <div class="border text d-flex justify-content-center text-special" id="title-4"><%= @register.ticket_number %></div>
    </div>

    <div id="row-3" class="row mt-2" style="width:100%;height:35%;">
        <div class="border text d-flex justify-content-center text-special" id="title-5"><%= @register.poll_voter.evote_code if @register.poll_voter.evote_code %></div>
        <div class="border text d-flex justify-content-center text-special" id="title-6"><%= @register.ticket_number %></div>
    </div>
</page>