<div class="row justify-content-center mt-4">
  <div class="col-lg-10 text-center" id="slogan">
    <h2 class="text-black">Select Your Register Category</h2>
    <div class="row">
      <div class="col-md-8 mx-auto">

        <%= form_for :register, url: list_registers_path, method: "get", remote: true do |f| %>

        <div class="form-group ml-4 mr-4">
          <%= button_tag "All", value: 3, type: "submit", id: "btn-all", class: "btn btn-outline-primary" %>
          <%= button_tag "Registered", value: 1, type: "submit", id: "btn-reg", class: "btn btn-outline-primary" %>
          <%= button_tag "RSVP", value: 2, type: "submit", id: "btn-rsvp", class: "btn btn-outline-primary" %>
          <%= button_tag "Walk-In", value: 0, type: "submit", id: "btn-walkin", class: "btn btn-outline-primary" %>
        </div>

        <div class="custom-control custom-checkbox d-inline">
          <%= check_box_tag :check, false, false, id: "check-in"%>
          <%= label_tag :check, "Hide Checked Customer" %>
          <%= check_box_tag :uncheck, false, false, id: "not-check-in"%>
          <%= label_tag :uncheck, "Hide Unchecked Customer" %>
        </div>

        <% end %>

      </div>
    </div>
  </div>
</div>

<main>
  <div class="position-relative mb-4" style="min-height:10rem;">
    <div class="container p-4 shadow rounded">
      <div class="row justify-content-center">
        <div class="col-lg-12">
          <p id="summary" class="text-black text-left">Checked-In <%= Register.where(attendance: true).count %> / Total <%= Register.all.count %></p>
          <p class="text-black text-right">(Customer Name, Phone Number, IC Number)</p>
          <table id="data-table" class="table table-sm table-responsive-lg table-striped" style="font-size:0.7rem">
            <thead class="bg-success text-white">
              <tr>
                <th>ID</th>
                <th>Full Name</th>
                <th>Phone 1</th>
                <th>Phone 2</th>
                <th>IC Number</th>
                <% if current_user.super? %>
                <th>Purchase (RM)</th>
                <% end %>
                <th>Draws</th>
                <th>Category</th>
                <th>Status</th>
                <th>CheckIn</th>
                <th>Show</th>
                <% if current_user.super? %>
                <th>Edit</th>
                <th>Delete</th>
                <% end %>
              </tr>
            </thead>

            <tbody id="search">
            </tbody>

          </table>


          <br>

        </div>
      </div>
    </div>
  </div>
</main>

<script>

loadjs();

$('.btn').on('click', function() {
  $('#summary').html('<i class="fa fa-circle-o-notch fa-spin" style="font-size:24px"></i><span class="small"> loading data...</span>');
});

function loadjs() {
  $(document).ready(function() {
    $('#data-table').DataTable({
      "search": {
        "caseInsensitive": true
      }
    });
  });
};

function printDiv(divName, regid) {
    var mywindow = window.open('/registers/' + regid);
    var printContents = document.getElementById(divName).innerHTML;
    mywindow.document.body.innerHTML = printContents;
    mywindow.print();
    return true;
};

</script>
