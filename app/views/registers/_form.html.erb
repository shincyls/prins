
          <div class="col-lg-12">
              <%= form_for @register, remote: true do |f| %>

                <%= f.hidden_field :category, value: "Registered" %>

                <div class="row mt-2">
                    <div class="col-md-2"><h6>Full Name*</h6></div>
                    <div class="col-md-10"><%= f.text_field :full_name, placeholder: "Full Name", class: "form-control" %></div>
                </div>

                <div class="row mt-2">
                    <div class="col-md-2"><h6>Company</h6></div>
                    <div class="col-md-10"><%= f.text_field :company, placeholder: "Company", class: "form-control" %></div>
                </div>

                <div class="row mt-2">
                    <div class="col-md-2"><h6>Department</h6></div>
                    <div class="col-md-10"><%= f.text_field :department, placeholder: "Department", class: "form-control" %></div>
                </div>

                <div class="row mt-2">
                    <div class="col-md-2"><h6>Employee ID</h6></div>
                    <div class="col-md-10"><%= f.text_field :employee_id, placeholder: "Employee ID", class: "form-control" %></div>
                </div>

                <br>

                <div class="row justify-content-center">
                  <%= f.submit "Submit Registration", class: "btn btn-primary", data: { confirm: 'Are you sure?' } %>
                </div>
        
            <% end %>
          </div>