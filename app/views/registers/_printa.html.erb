<div class="modal-header bg-info" id="modal-header">
    <span class='text-white display-6'>Check Information</span>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">Ã—</span>
    </button>
</div>

<div class="modal-body p-0" id="modal-body">
    <div id="print">
        <div class="text-special m-2">
            <p><span class="text-success"><b>Company</b></span> 
            <%= @register.company %></p>
            <p><span class="text-success"><b>Name</b></span> 
            <%= @register.full_name %></p>
            <p><span class="text-success"><b>EmployeeID</b></span> 
            <%= @register.employee_id %></p>
            <p><span class="text-success"><b>Ticket</b></span> 
            <%= @register.ticket_number %></p>
            <% if @register.event.evoting %>
            <p><span class="text-success"><b>eVote Code</b></span> <%= @register.poll_voter.evote_code if @register.poll_voter.evote_code %></p>
            <% end %>
        </div>
    </div>
</div>

<div class="modal-footer" id="modal-footer">
    <div class="row justify-content-center">
        <%= link_to "Click to Print", printupdate_register_path, class: "btn btn-primary m-2 mr-4", id: "printBtn", remote: true  %>
    </div>
</div>