<div class="text-center text-special text-shadow m-4">
    <h4>It's Polling Time</h4>
    <h6>Please vote the candidate of your heart!</h6>

    <div>
        <h3><%= @event.name %></h3>
    </div>
    
</div>

<% @event.polls.each do |p| %>
<% @poll = p %>
<section class="section">

      <div class="container w-100">
        <div class="card card-profile shadow p-4">

          <% if (!session[:evote_id].nil?) | (logged_in?) %>

          <div class="text-center text-special mt-3 mb-2">
            <h3><%= p.name %></h3>
            <h4><%= p.description %></h4>
          </div>

          <hr>

          <% if @poll.poll_results %>

          <div class="text-center text-special mt-3 mb-2">
            <h3>Poll Result</h3>
          </div>
          <div class="mt-2 text-center">
            <div class="row justify-content-center">
              <div id='event-poll-result-<%=p.id%>' class="col-lg-9 poll-selection">
                  <%= render partial: 'events/results', local: @poll %>
              </div>
            </div>
          </div>
          <div class="text-center text-special mt-3 mb-2">
            <h6>Total Votes: <%= p.poll_banks.where(active: true).count %></h6>
          </div>
          <hr>
          <% end %>

          <% if (!session[:evote_id].nil?) %>
          <div class="mt-2 text-center">
            <div class="row justify-content-center">
              <div id='event-poll-candidate-<%=p.id%>' class="col-lg-9 poll-selection">
                  <%= render partial: 'events/candidates', local: @poll %>
              </div>
            </div>
          </div>
          <div class="text-center text-special mt-3 mb-2">
            <h6>Vote/Pax: <%= p.max_votes %></h6>
          </div>
          <% else %>
          <div class="text-center text-special mt-3 mb-2">
            <h6>You must sign-in with evote code in order to participate for voting.</h6>
          </div>
          <% end %>

          <% end %>

        </div>
      </div>

 </section>
 <% end %>





